{
    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS",
        "rootDir": "./src",
        "outDir": "./dist",
        "strict": true,
        "baseUrl": "./src",
        "paths": {
            "@/*": ["./*"]
        },
        "esModuleInterop": true
        //"typeRoots": ["./node_modules/@types", "./src/types"]
    },
    "include": ["src/**/*", "src/types/**/*"],
    "ts-node": {
        "require": ["tsconfig-paths/register"]
    }
}
